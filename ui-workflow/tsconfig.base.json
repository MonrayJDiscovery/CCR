{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@workflow-front-end/api": ["libs/api/src/index.ts"],
      "@workflow-front-end/shared": ["libs/shared/src/index.ts"],
      "@workflow-front-end/shared/components/header": [
        "libs/shared/components/header/src/index.ts"
      ],
      "@workflow-front-end/shared/theme/header": [
        "libs/shared/theme/header/src/index.ts"
      ],
      "@workflow-front-end/shared/theme": ["libs/shared/theme/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
